@model IEnumerable<作業客戶管理.Models.客戶統計>

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.TextBox("search")
    <input type="submit" name="submit" value="搜尋" class="text-right" />
}
<br/>
<table class="table">
    <tr>
        <th>
            客戶名稱
        </th>
        <th>
            @Html.DisplayNameFor(model => model.聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行帳戶數量)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.客戶名稱
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.聯絡人數量)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行帳戶數量)
        </td>
    </tr>
}

</table>
